<Window x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Menu HorizontalAlignment="Left" Height="22" VerticalAlignment="Top" Width="792">
                <MenuItem Header="File">
                    <MenuItem Header="New" Click="MenuItem_Click"></MenuItem>
                    <MenuItem Header="Open" Click="MenuItem_Click"></MenuItem>
                    <MenuItem Header="Save" Click="MenuItem_Click"></MenuItem>
                    <MenuItem Header="SaveAs..." Click="MenuItem_Click"></MenuItem>
                    <Separator></Separator>
                    <MenuItem Header="Exit" Click="MenuItem_Click"></MenuItem>
                </MenuItem>
            </Menu>
            <TextBox 
                Name="myTextBox"
                HorizontalAlignment="Left"
                Height="357" Margin="10,26,0,0" 
                TextWrapping="Wrap" 
                Text="" 
                VerticalAlignment="Top" Width="772"
                AcceptsReturn="True"/>
        </StackPanel>
    </Grid>
</Window>
